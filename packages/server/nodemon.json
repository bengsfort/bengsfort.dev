{
  "restartable": "rs",
  "ignore": [
    ".git",
    "build/server",
    "build/client",
    "postcss.config.js",
    "*.js.map",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "build/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
