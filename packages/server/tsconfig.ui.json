{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "../app"
    }
  ],
  "include": [
    "./src/ui/*",
  ],
  "compilerOptions": {
    "paths": {
      "@bengsfort.dev/app": [
        "../app"
      ]
    },
    "composite": true,
    "rootDir": "src/ui",
    "outDir": "build/bundle",
    "baseUrl": "src/ui",
    "declarationDir": "build/bundle",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "typeRoots": [
      "../../node_modules/types",
      "./src/types",
    ],
    // CSS Modules
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase",
          "postcssOptions": {
            "useConfig": true,
          },
        },
      },
    ],
    // Preact JSX
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
}
