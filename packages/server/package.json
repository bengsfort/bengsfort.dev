{
  "name": "@bengsfort.dev/server",
  "packageManager": "yarn@3.2.0",
  "type": "module",
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:ts": "eslint ./src --fix",
    "lint:css": "stylelint './src/**/*.css' --fix",
    "clean": "rimraf ./build",
    "serve": "NODE_ENV=production node ./build/server.js",
    "dev": "yarn watch & nodemon ./build/server.js",
    "watch": "node ./scripts/build-cli.mjs --watch",
    "build": "yarn build:client && yarn build:client-ssr && yarn build:server",
    "build:client": "vite build --outDir ./build/client",
    "build:client-ssr": "vite build --ssr src/entry-server.ts --outDir ./build/server",
    "build:server": "node ./scripts/build-cli.mjs"
  },
  "engines": {
    "node": ">=16.3.0"
  },
  "devDependencies": {
    "@bengsfort.dev/esbuild": "workspace:^",
    "@bengsfort.dev/postcss": "workspace:^",
    "@preact/preset-vite": "^2.5.0",
    "@types/compression": "^1",
    "@types/express": "^4.17.17",
    "@types/serve-static": "^1",
    "eslint": "^8.33.0",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "typescript-plugin-css-modules": "^4.1.1",
    "vite": "^4.1.1"
  },
  "dependencies": {
    "@bengsfort.dev/app": "workspace:^",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "preact": "^10.12.0",
    "preact-render-to-string": "^5.2.6",
    "serve-static": "^1.15.0"
  }
}
