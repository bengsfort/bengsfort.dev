{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "declarationDir": "build",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "types": [
      "jest",
      "vite/client",
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "./src/types",
    ],
    // CSS Modules
    "plugins": [],
    // Preact JSX
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
}
