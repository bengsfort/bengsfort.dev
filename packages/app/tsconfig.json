{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "declarationDir": "build",
    "skipLibCheck": true,
    "paths": {
      "react": [
        "../../node_modules/preact/compat/"
      ],
      "react-dom": [
        "../../node_modules/preact/compat/"
      ],
      "@assets/*": [
        "./common/assets/*"
      ],
      "@hooks/*": [
        "./common/hooks/*"
      ],
      "@components/*": [
        "./common/components/*"
      ],
      "@styles/*": [
        "./common/style/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@layout/*": [
        "./layout/*"
      ],
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "./src/types",
    ],
    // CSS Modules
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase",
          "postcssOptions": {
            "useConfig": true,
          },
        },
      },
    ],
    // Preact JSX
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
}