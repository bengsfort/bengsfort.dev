{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "declarationDir": "build",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "typeRoots": [
      "../../node_modules/types",
      "./src/types",
    ],
    // CSS Modules
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase",
          "postcssOptions": {
            "useConfig": true,
          },
        },
      },
    ],
    // Preact JSX
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
}
