{
  "name": "bengsfort.dev",
  "packageManager": "yarn@4.6.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "tools/*",
    "packages/*",
    "site"
  ],
  "scripts": {
    "dev": "yarn workspace @bengsfort/site run dev",
    "build": "yarn workspace @bengsfort/site run build",
    "preview": "yarn workspace @bengsfort/site run preview",
    "lint": "yarn workspace @bengsfort/site run lint",
    "lint:fix": "yarn workspace @bengsfort/site run lint:fix"
  },
  "engines": {
    "node": ">=20.4.0"
  }
}
